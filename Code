#include<iostream>
using namespace std;



int main() {
	
	for (int i = 0; i < 71; i += 10) {
		cout << i << "   ";
	}

	cout << endl;

	for (int j = 20; j > -20; j--) {
		cout << j << "   ";
	}

	cout << endl;

	for (int l = 3; l < 1876; l *= 5) {
		cout << l << "   ";
	}


	cout << endl;

	for (int z = 0; z < 12; z++) {
		for (int x = 0; x < 8; x++){
			cout << "*";
		}
		cout << endl;
	}


	int shuf;

	cout << "how many times would you like to shuffle?" << endl;

	cin >> shuf;

	while (0 < shuf) {
		cout << "shuffle" << endl;
		shuf--;


	}

}
